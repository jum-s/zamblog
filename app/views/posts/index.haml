-@posts.each do |post|
  .row.post_box
    .small-9.columns
      %h4.heading.heading-1
        %strong
          = post.title
    .small-3.columns
      %h3.date
        = post.created_at.strftime("%e %b")
    .columns
      %p 
        =post.body.to_s.html_safe
      %br
      - if post.video == ""
      - else
        %br
        .flex-video
          %iframe{src: "//www.dailymotion.com/embed/video/#{post.video}", allowfullscreen: "", frameborder: "0", height: "270",  width: "480"}
  %br
  %hr
  %br